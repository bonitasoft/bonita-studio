<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.bonitasoft.studio</groupId>
		<artifactId>studio</artifactId>
		<version>6.0.3-SNAPSHOT</version>
	</parent>

	<groupId>org.bonitasoft.studio</groupId>
	<artifactId>all-in-one</artifactId>
	<version>6.0.3-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>

	<properties>
		<product.short.name>BonitaBPMCommunity</product.short.name>
	</properties>

	<build>
		<plugins>
			<!-- Retrieve each platform artifact -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>unpack-linux.gtk.x86_64</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.bonitasoft.studio.releng</groupId>
									<artifactId>studio-repository</artifactId>
									<version>${project.version}</version>
									<classifier>linux.gtk.x86_64</classifier>
									<type>tar.gz</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/linux.gtk.x86_64</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>unpack-linux.gtk.x86</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.bonitasoft.studio.releng</groupId>
									<artifactId>studio-repository</artifactId>
									<version>${project.version}</version>
									<classifier>linux.gtk.x86</classifier>
									<type>tar.gz</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/linux.gtk.x86</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>unpack-macosx.cocoa.x86_64</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.bonitasoft.studio.releng</groupId>
									<artifactId>studio-repository</artifactId>
									<version>${project.version}</version>
									<classifier>macosx.cocoa.x86_64</classifier>
									<type>tar.gz</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/macosx.cocoa.x86_64</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>unpack-macosx.cocoa.x86</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.bonitasoft.studio.releng</groupId>
									<artifactId>studio-repository</artifactId>
									<version>${project.version}</version>
									<classifier>macosx.cocoa.x86</classifier>
									<type>tar.gz</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/macosx.cocoa.x86</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>unpack-win32.x86_64</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.bonitasoft.studio.releng</groupId>
									<artifactId>studio-repository</artifactId>
									<version>${project.version}</version>
									<classifier>win32.win32.x86_64</classifier>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/win32.win32.x86_64</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>unpack-win32.x86</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.bonitasoft.studio.releng</groupId>
									<artifactId>studio-repository</artifactId>
									<version>${project.version}</version>
									<classifier>win32.win32.x86</classifier>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/win32.win32.x86</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Build all-in-one assemblies with all platforms -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>make-directory-assembly</id>
						<phase>process-resources</phase>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptor>${basedir}/assembly-descriptor.xml</descriptor>
							<finalName>${product.short.name}-${project.version}</finalName>
						</configuration>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
					<execution>
						<id>make-zip-assembly</id>
						<phase>package</phase>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptor>${basedir}/assembly-zip-descriptor.xml</descriptor>
							<finalName>${product.short.name}-${project.version}</finalName>
						</configuration>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>


			<!-- Create a proper bundles.info for all-in-one -->
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-eclipserun-plugin</artifactId>
				<version>0.16.0</version>
				<configuration>
					<appArgLine>${os-jvm-flags} -application org.eclipse.ant.core.antRunner -buildfile p2AllInOne.xml -clean -noSplash -consoleLog -Droot.dir=${project.build.directory}/${product.short.name}-${project.version}/</appArgLine>
					<argLine>-Xmx512m -Xms256m -XX:MaxPermSize=512m</argLine>
					<dependencies>
						<dependency>
							<artifactId>org.bonitasoft.studio_antTasks</artifactId>
							<type>eclipse-plugin</type>
						</dependency>
						<dependency>
							<artifactId>org.apache.ant</artifactId>
							<type>eclipse-plugin</type>
						</dependency>
						<dependency>
							<artifactId>org.eclipse.equinox.ds</artifactId>
							<type>eclipse-plugin</type>
						</dependency>
					</dependencies>
				</configuration>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>eclipse-run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Build installers for each platform-->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
					 	<id>linux-x86</id>
						<phase>package</phase>
						<configuration>
							<arguments>
								<argument>build</argument>
								<argument>${basedir}/installer/installer_project_linux_x86.xml</argument>
								<argument>linux</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
					 	<id>linux-x86_64</id>
						<phase>package</phase>
						<configuration>
							<arguments>
								<argument>build</argument>
								<argument>${basedir}/installer/installer_project_linux_x86_64.xml</argument>
								<argument>linux-x64</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
					 	<id>macosx-x86</id>
						<phase>package</phase>
						<configuration>
							<arguments>
								<argument>build</argument>
								<argument>${basedir}/installer/installer_project_macosx_x86.xml</argument>
								<argument>osx</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
					 	<id>macosx-x86_64</id>
						<phase>package</phase>
						<configuration>
							<arguments>
								<argument>build</argument>
								<argument>${basedir}/installer/installer_project_macosx_x86_64.xml</argument>
								<argument>osx</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
					 	<id>win-x86</id>
						<phase>package</phase>
						<configuration>
							<arguments>
								<argument>build</argument>
								<argument>${basedir}/installer/installer_project_win_x86.xml</argument>
								<argument>windows</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
					 	<id>win-x86_64</id>
						<phase>package</phase>
						<configuration>
							<arguments>
								<argument>build</argument>
								<argument>${basedir}/installer/installer_project_win_x86_64.xml</argument>
								<argument>windows</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<executable>${BITROCK_HOME}/bin/builder</executable>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					 <execution>
						<id>linux x86 installer file</id>
						<phase>prepare-package</phase>
						<configuration>
							<target>
							    <property name="studio.dir" value="${project.build.directory}/linux.gtk.x86"/>
							    <property name="bitrock.install" value="${project.build.directory}/installers"/>
							    <property name="os_arch" value="32" />
								<property file="installer/installer.properties"/>
								<property name="installer.name" value="${product.short.name}-${product.version}-x86.run"/>
								<property name="updated.project.file" value="${basedir}/installer/installer_project_linux_x86.xml" />
								<ant antfile="createInstallerProject.xml" />		
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>linux x86_64 installer file</id>
						<phase>prepare-package</phase>
						<configuration>
							<target>
							    <property name="studio.dir" value="${project.build.directory}/linux.gtk.x86_64"/>
							    <property name="bitrock.install" value="${project.build.directory}/installers"/>
							    <property name="os_arch" value="64" />
								<property file="installer/installer.properties"/>
								<property name="installer.name" value="${product.short.name}-${product.version}-x86_64.run"/>
								<property name="updated.project.file" value="${basedir}/installer/installer_project_linux_x86_64.xml" />
								<ant antfile="createInstallerProject.xml" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>macosx x86 installer file</id>
						<phase>prepare-package</phase>
						<configuration>
							<target>
							    <property name="studio.dir" value="${project.build.directory}/macosx.cocoa.x86"/>
							    <property name="bitrock.install" value="${project.build.directory}/installers"/>
							    <property name="os_arch" value="32" />
								<property file="installer/installer.properties"/>
								<property name="installer.name" value="${product.short.name}-${product.version}-x86"/>
								<property name="updated.project.file" value="${basedir}/installer/installer_project_macosx_x86.xml" />
								<ant antfile="createInstallerProject.xml" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>macosx x86_64 installer file</id>
						<phase>prepare-package</phase>
						<configuration>
							<target>
							    <property name="studio.dir" value="${project.build.directory}/macosx.cocoa.x86_64"/>
							    <property name="bitrock.install" value="${project.build.directory}/installers"/>
							    <property name="os_arch" value="64" />
								<property file="installer/installer.properties"/>
								<property name="installer.name" value="${product.short.name}-${product.version}-x86_64"/>
								<property name="updated.project.file" value="${basedir}/installer/installer_project_macosx_x86_64.xml" />
								<ant antfile="createInstallerProject.xml" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>windows x86 installer file</id>
						<phase>prepare-package</phase>
						<configuration>
							<target>
							    <property name="studio.dir" value="${project.build.directory}/win32.win32.x86"/>
							    <property name="bitrock.install" value="${project.build.directory}/installers"/>
							    <property name="os_arch" value="32" />
								<property file="installer/installer.properties"/>
								<property name="installer.name" value="${product.short.name}-${product.version}-x86.exe"/>
								<property name="updated.project.file" value="${basedir}/installer/installer_project_win_x86.xml" />
								<ant antfile="createInstallerProject.xml" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>windows x86_64 installer file</id>
						<phase>prepare-package</phase>
						<configuration>
							<target>
							    <property name="studio.dir" value="${project.build.directory}/win32.win32.x86_64"/>
							    <property name="bitrock.install" value="${project.build.directory}/installers"/>
							    <property name="os_arch" value="64" />
								<property file="installer/installer.properties"/>
								<property name="installer.name" value="${product.short.name}-${product.version}-x86_64.exe"/>
								<property name="updated.project.file" value="${basedir}/installer/installer_project_win_x86_64.xml" />
								<ant antfile="createInstallerProject.xml" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>

</project>
