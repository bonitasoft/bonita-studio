                            <artifactId>guice-plexus-shim</artifactId>
                            <version>2.3.0</version>
                            <repositoryType>PLUGIN</repositoryType>
                        </DynamicDependency>
                    </dynamicDependencies>
                </configuration>
            </plugin>
