<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.bonitasoft.studio.bundles</groupId>
        <artifactId>plugins</artifactId>
        <version>8.0.0.alpha-01</version>
    </parent>
    <groupId>org.bonitasoft.studio.bundles.plugins</groupId>
    <artifactId>org.bonitasoft.studio.local.repository</artifactId>
    <packaging>eclipse-plugin</packaging>

    <properties>
        <repository.dir>${project.basedir}/repository</repository.dir>
        <localRepository.compatibleVersions.skip>false</localRepository.compatibleVersions.skip>
        <goOfflineCmdLine>
            de.qaware.maven:go-offline-maven-plugin:resolve-dependencies
            -Dlocal.remote.repo.url=file:///${settings.localRepository}
            -Dmaven.repo.local=${repository.dir}
            -Dbonita-project-maven-plugin.version=${bonita-project-report-model.version}
            -Dbonita.runtime.version=${bonita-runtime.version}
        </goOfflineCmdLine>
        <mavenSettingsArg></mavenSettingsArg>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <id>clean-local-repository</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <skip>${localRepository.skip}</skip>
                            <filesets>
                                <fileset>
                                    <directory>${repository.dir}</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                    <execution>
                        <id>clean-repository-remote-repositories</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${repository.dir}</directory>
                                    <includes>
                                        <include>**/_remote.repositories</include>
                                    </includes>
                                    <followSymlinks>false</followSymlinks>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-dependencies</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <workingDirectory>${project.basedir}/src/template</workingDirectory>
                            <executable>${mavenWrapper}</executable>
                            <useMavenLogger>true</useMavenLogger>
                            <skip>${localRepository.skip}</skip>
                            <commandlineArgs>${mavenSettingsArg} -ntp ${goOfflineCmdLine}</commandlineArgs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>maven-settings-arg</id>
            <activation>
                <property>
                    <name>mavenSettingsFile</name>
                </property>
            </activation>
            <properties>
                <mavenSettingsArg>-s ${mavenSettingsFile}</mavenSettingsArg>
            </properties>
        </profile>
        <profile>
            <id>offline-local-repository</id>
            <properties>
                <localRepository.compatibleVersions.skip>false</localRepository.compatibleVersions.skip>
                <goOfflineCmdLine>
                    de.qaware.maven:go-offline-maven-plugin:resolve-dependencies
                    -Dmaven.repo.local=${settings.localRepository}
                    -Dlocal.remote.repo.url=file:///${settings.localRepository}
                    -Dbonita-project-maven-plugin.version=${bonita-project-report-model.version}
                    -Dbonita.runtime.version=${bonita-runtime.version}
                </goOfflineCmdLine>
            </properties>
            <build>
                <plugins>
                    <plugin>
                     <groupId>org.codehaus.mojo</groupId>
                     <artifactId>exec-maven-plugin</artifactId>
                     <executions>
                         <execution>
                            <id>resolve-dependencies-locally</id>
                            <goals>
                                <goal>exec</goal>
                            </goals>
                            <phase>generate-resources</phase>
                            <configuration>
                                <workingDirectory>${project.basedir}/src/template</workingDirectory>
                                <executable>${mavenWrapper}</executable>
                                <useMavenLogger>true</useMavenLogger>
                                <skip>${localRepository.skip}</skip>
                                <commandlineArgs>${mavenSettingsArg} -ntp ${goOfflineCmdLine}</commandlineArgs>
                            </configuration>
                        </execution>
                     </executions>
                    </plugin>
                </plugins>
            </build>
        </profile> 
        <profile>
            <id>windows-maven-wrapper</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <properties>
                <mavenWrapper>${project.basedir}/../../../mvnw.cmd</mavenWrapper>
            </properties>
        </profile>
        <profile>
            <id>unix-maven-wrapper</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <mavenWrapper>${project.basedir}/../../../mvnw</mavenWrapper>
            </properties>
        </profile>
        <profile>
            <id>mac-maven-wrapper</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <mavenWrapper>${project.basedir}/../../../mvnw</mavenWrapper>
            </properties>
        </profile>
    </profiles>
</project>
