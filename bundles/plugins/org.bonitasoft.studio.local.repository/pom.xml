<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.bonitasoft.studio.bundles</groupId>
        <artifactId>plugins</artifactId>
        <version>7.13.0.W44</version>
    </parent>
    <groupId>org.bonitasoft.studio.bundles.plugins</groupId>
    <artifactId>org.bonitasoft.studio.local.repository</artifactId>
    <packaging>eclipse-plugin</packaging>

    <properties>
        <repository.dir>${project.basedir}/repository</repository.dir>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>clean-local-repository</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${repository.dir}</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                    <execution>
                        <id>clean-repository-remote-repositories</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${repository.dir}</directory>
                                    <includes>
                                        <include>**/_remote.repositories</include>
                                    </includes>
                                    <followSymlinks>false</followSymlinks>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-dependencies</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <workingDirectory>${project.basedir}/src/template</workingDirectory>
                            <executable>${mavenWrapper}</executable>
                            <useMavenLogger>true</useMavenLogger>
                            <arguments>
                                <argument>org.apache.maven.plugins:maven-dependency-plugin:${maven-dependency-plugin.version}:resolve</argument>
                                <argument>-Dmaven.repo.local=${repository.dir}</argument>
                                <argument>-Dbonita.runtime.version=${engine.version}</argument>
                                <argument>-Dbonita-project-maven-plugin.version=${bonita-project-report-model.version}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>package-dependency-plugins</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <workingDirectory>${project.basedir}/src/template</workingDirectory>
                            <executable>${mavenWrapper}</executable>
                            <useMavenLogger>true</useMavenLogger>
                            <arguments>
                                <argument>org.apache.maven.plugins:maven-dependency-plugin:${maven-dependency-plugin.version}:resolve-plugins</argument>
                                <argument>-Dmaven.repo.local=${repository.dir}</argument>
                                <argument>-Dbonita.runtime.version=${engine.version}</argument>
                                <argument>-Dbonita-project-maven-plugin.version=${bonita-project-report-model.version}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>windows-maven-wrapper</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <properties>
                <mavenWrapper>${project.basedir}/../../../mvnw.cmd</mavenWrapper>
            </properties>
        </profile>
        <profile>
            <id>unix-maven-wrapper</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <mavenWrapper>${project.basedir}/../../../mvnw</mavenWrapper>
            </properties>
        </profile>
        <profile>
            <id>mac-maven-wrapper</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <mavenWrapper>${project.basedir}/../../../mvnw</mavenWrapper>
            </properties>
        </profile>
    </profiles>
</project>
