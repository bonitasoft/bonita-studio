<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.bonitasoft.studio.bundles</groupId>
		<artifactId>plugins</artifactId>
		<version>7.13.0.W12</version>
	</parent>
	<groupId>org.bonitasoft.studio.bundles.plugins</groupId>
	<artifactId>bonita-local-maven-repository</artifactId>
	<packaging>pom</packaging>

	<properties>
		<repository.dir>${project.build.directory}/repository</repository.dir>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>package-offline-repository</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<workingDirectory>${project.basedir}/src/main/resources</workingDirectory>
							<executable>${mavenWrapper}</executable>
							<useMavenLogger>true</useMavenLogger>
							<arguments>
								<argument>org.apache.maven.plugins:maven-dependency-plugin:${maven-dependency-plugin.version}:go-offline</argument>
								<argument>-Dmaven.repo.local=${repository.dir}</argument>
								<argument>-Dbonita.version=${engine.version}</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>assembly.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>windows-maven-wrapper</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<mavenWrapper>${project.basedir}/../../../mvnw.cmd</mavenWrapper>
			</properties>
		</profile>
		<profile>
			<id>unix-maven-wrapper</id>
			<activation>
				<os>
					<family>unix</family>
				</os>
			</activation>
			<properties>
				<mavenWrapper>${project.basedir}/../../../mvnw</mavenWrapper>
			</properties>
		</profile>
		<profile>
			<id>mac-maven-wrapper</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<properties>
				<mavenWrapper>${project.basedir}/../../../mvnw</mavenWrapper>
			</properties>
		</profile>
	</profiles>
</project>
